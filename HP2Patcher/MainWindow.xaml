<Window x:Class="HP2Patcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HP2Patcher"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="HP2Patcher" Height="576" Width="900">
    <Grid>
        <Image Name="BG" Source="img/hotpursuit.png" Stretch="UniformToFill" HorizontalAlignment="Center"/>
        <Image Name="Logo" Source="img/hp2logo.png" HorizontalAlignment="Center" VerticalAlignment="Top" Height="181" Width="442" Margin="0,-22,0,0"/>
        <Button Name="GitHub" Click="GitHub_Click" Content="GitHub"  Height="40" Width="104" MinWidth="150" FontSize="20" FontWeight="Bold" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <Button Name="Patch" Click="Patch_Click" Content="Patch"  Height="60" Width="200" MinWidth="150" FontSize="20" FontWeight="Bold" Margin="346,0,346,40" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
    </Grid>
</Window>
